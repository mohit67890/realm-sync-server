# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/sync_demo

# Azure Web PubSub Configuration
WEB_PUBSUB_CONNECTION_STRING=Endpoint=https://your-pubsub.webpubsub.azure.com;AccessKey=your-access-key;Version=1.0;
WEB_PUBSUB_HUB_NAME=sync-hub

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
# REQUIRED in production for JWT authentication
# Generate a secure random string (minimum 32 characters)
# Example: openssl rand -base64 32
AUTH_JWT_SECRET=your-secret-key-min-32-chars-change-in-production

# CORS Configuration for production
# Comma-separated list of allowed origins (no spaces)
# Example: https://app.example.com,https://admin.example.com
# ALLOWED_ORIGINS=https://your-app.com

# Optional: Logging
LOG_LEVEL=debug

# Optional: Rate Limiting (defaults shown)
# SYNC_RATE_LIMIT_MAX=50
# SYNC_RATE_LIMIT_WINDOW_MS=10000

# Optional: Connection Limits (defaults shown)
# MAX_CONNECTIONS_PER_USER=10
# MAX_CONNECTIONS_PER_IP=50
